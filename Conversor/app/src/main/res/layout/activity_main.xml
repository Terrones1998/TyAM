<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/header_layout" />

    <TableLayout
        android:id="@+id/edit_texts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp">

        <TableRow>

            <EditText
                android:id="@+id/edt_origen"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="@string/origen"
                android:inputType="numberDecimal"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/edt_destino"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="@string/destino"
                android:maxLength="8"
                android:inputType="none"
                android:textSize="36sp"
                android:layout_marginStart="35dp"/>
        </TableRow>

    </TableLayout>


    <RadioGroup
        android:id="@+id/rg_medidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_texts"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <RadioButton
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperatura" />

        <RadioButton
            android:id="@+id/longi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/longitud"
            android:layout_marginStart="130dp"
            android:layout_marginTop="-30dp"/>

        <RadioButton
            android:id="@+id/vol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volumen"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-30dp"/>


        <RadioButton
            android:id="@+id/acel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aceleracion" />


        <RadioButton
            android:id="@+id/peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/peso"
            android:layout_marginStart="130dp"
            android:layout_marginTop="-30dp"/>

        <RadioButton
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/area"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-30dp"/>

    </RadioGroup>

    <Spinner
        android:id="@+id/my_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rg_medidas"
        android:layout_marginTop="100dp"
        android:layout_alignParentEnd="true"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:paddingStart="20dp">

        <TableRow>

            <Button
                android:id="@+id/bt_convertir"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:text="@string/convertir" />

            <Button
                android:id="@+id/bt_limpiar"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginEnd="100dp"
                android:text="@string/limpiar"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
