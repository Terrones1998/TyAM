<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/edit_texts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingTop="50dp"
        android:paddingBottom="50dp">

        <TableRow>

            <EditText
                android:id="@+id/edt_origen"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Origen"
                android:inputType="numberDecimal"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/edt_destino"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Destino"
                android:inputType="numberDecimal"
                android:textSize="36sp" />
        </TableRow>

    </TableLayout>


    <RadioGroup
        android:id="@+id/rg_medidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_texts"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperatura" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitud"
            android:layout_marginStart="130dp"
            android:layout_marginTop="-30dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volumen"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-30dp"/>


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceleración" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso"
            android:layout_marginStart="130dp"
            android:layout_marginTop="-30dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Área"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-30dp"/>

    </RadioGroup>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rg_medidas"
        android:layout_alignParentEnd="true"
        android:paddingTop="125dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">

        <TableRow>

            <Button
                android:id="@+id/bt_convertir"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:text="CONVERTIR" />

            <Button
                android:id="@+id/bt_limpiar"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:text="LIMPIAR" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
